<UserControl x:Class="GitFlowVS.Extension.UI.InstallGitFlowUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10" Orientation="Vertical">
        <TextBlock Text="It looks like you haven't installed GitFlow. "></TextBlock>
        <Button Width="100px" Margin="0,10,0,0" Click="Button_Click" HorizontalAlignment="Left">Install!</Button>
    </StackPanel>
</UserControl>
